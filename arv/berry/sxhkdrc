XF86AudioLowerVolume
	pactl set-sink-volume 0 -10% && pactl set-sink-volume 1 -10%
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +10% && pactl set-sink-volume 1 +10%
XF86AudioMute
	pactl set-sink-mute 0 toggle && pactl set-sink-mute 1 toggle
XF86MonBrightness{Up,Down}  
  brightnessctl s 9000{+,-}  
